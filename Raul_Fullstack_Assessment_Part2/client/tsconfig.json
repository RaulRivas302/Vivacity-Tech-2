// tsconfig.json
{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "es6", // Target ECMAScript version
    "module": "es6", // Specify module code generation
    "moduleResolution": "node",
    "jsx": "react", // If using React, set to "react"
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "baseUrl": "./src", // Base directory to resolve non-relative module names
    "outDir": "./dist", // Output directory for compiled files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*"], // Files to include in compilation
  "exclude": ["node_modules"] // Files to exclude from compilation
}
